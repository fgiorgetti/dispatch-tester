<html>
  <head>
    <title>OSLO Messaging 2-router test - Allocator results</title>
    <style>
      body {
        margin-top: 0;
        margin-left: 0;
      }
      div.divtable {
        width: 100%;
        height: 100%;
        margin-top: 0;
        top: 0;
        left: 0;
        overflow-y: scroll;
        display: inline-block;
      }
      div.divheader {
        position: fixed;
        display: table;
        font-weight: bold;
        color: white;
        width: 100%;
        height: 80;
        background-color: #FF000F;
        top: 0;
        left: 0;
      }
      div.divbody {
        width: 100%;
        padding-top: 80;
        margin-left: 0;
        left: 0;
      }
      div.divrow {
        width: 100%;
        margin: 0;
        margin-top: 0;
        margin-left: 0;
        left: 0;
        display: table;
        padding-bottom: 5;
        padding-top: 5;
        border: 1px solid;
        border-top: 0;
      }
      div.divcell {
        display: table-cell;
        height: {{ image_height }};
        vertical-align: middle;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="divtable">
      <div class="divheader">
        <div style="width: 100%; text-align: center">
          <h2>OSLO Messaging 2-router test - Allocator results</h2>
        </div>
        <div style="width: 10%; text-align: center; float: left;">
          <b>Allocator</b>
        </div>
        {% for label in labels %}
        <div style="width: {{ column_width }}; text-align: center; float: left;">
          <b>{{ label }}</b>
        </div>
        {% endfor %}
      </div>
      <div class="divbody">
        {% for allocator in allocators %}
        <div class="divrow">
          <div class="divcell" style="width: 10%">
            <b>{{ allocator['name'] }}</b>
          </div>
          {% for allocator_result in allocator.results %}
          <div class="divcell" style="width: {{ column_width }}">
            <img src="{{ allocator_result.router1_image }}" width="{{ image_width }}" height="{{ image_height }}">&nbsp;
            <img src="{{ allocator_result.router2_image }}" width="{{ image_width }}" height="{{ image_height }}">&nbsp;
          </div>
          {% endfor %}
        </div>
        {% endfor %}
      </div>
    </div>
  </body>
</html>
